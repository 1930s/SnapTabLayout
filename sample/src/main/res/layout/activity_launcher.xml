<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".LauncherActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_expanded_at"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/spinner_num_tabs"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread">

        <EditText
            android:id="@+id/etExpandsAt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Set Tab Expands At"
            android:inputType="number"
            android:textSize="@dimen/launcher_screen_text_size" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tv_num_tabs"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Number Of Tabs"

        android:textSize="@dimen/launcher_screen_text_size"
        app:layout_constraintBottom_toTopOf="@id/btGo"
        app:layout_constraintEnd_toStartOf="@id/spinner_num_tabs"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_expanded_at"
        app:layout_constraintVertical_chainStyle="spread" />

    <Spinner
        android:id="@+id/spinner_num_tabs"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@id/btGo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@id/tv_num_tabs"
        app:layout_constraintTop_toBottomOf="@id/til_expanded_at"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btGo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="Go"
        android:textColor="@android:color/white"
        android:textSize="@dimen/launcher_screen_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_num_tabs"
        app:layout_constraintVertical_chainStyle="spread" />


</android.support.constraint.ConstraintLayout>